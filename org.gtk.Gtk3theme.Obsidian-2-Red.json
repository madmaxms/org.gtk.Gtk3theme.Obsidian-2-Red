{
   "id":"org.gtk.Gtk3theme.Obsidian-2-Red",
   "branch":"3.22",
   "runtime":"org.freedesktop.Sdk",
   "build-extension":true,
   "sdk":"org.freedesktop.Sdk",
   "runtime-version":"23.08",
   "appstream-compose":false,
   "separate-locales":false,
   "modules":[
      {
         "name":"Obsidian-2-Red",
         "buildsystem":"simple",
         "build-commands":[
            "tar -xf obsidian-2-theme.tar.xz",
            "install -Dm644 Obsidian-2-Red/gtk-3.20/gtk.css /usr/share/runtime/share/themes/Obsidian-2-Red/gtk-3.0",
            "install -Dm644 Obsidian-2-Red/gtk-3.0/colAccents.css /usr/share/runtime/share/themes/Obsidian-2-Red/gtk-3.0",
            "install -Dm644 Obsidian-2-Red/gtk-3.0/colCommon.css /usr/share/runtime/share/themes/Obsidian-2-Red/gtk-3.0",
            "install -Dm644 --target-directory=/usr/share/runtime/share/themes/Obsidian-2-Red/gtk-3.0/assets Obsidian-2-Red/gtk-3.0/assets/*",
            "install -Dm644 Obsidian-2-Red/index.theme /usr/share/runtime/share/themes/Obsidian-2-Red/index.theme"
         ],
         "sources":[
            {
               "type":"file",
               "url":"https://github.com/madmaxms/theme-obsidian-2/releases/download/v2.25/obsidian-2-theme.tar.xz",
               "dest-filename": "obsidian-2-theme.tar.xz",
               "sha256":"1da8f3d9b15cb22fbd9128f1b99e896aff2ded2eadac3505e72262bf0f95ca9c"
            }
         ]
      },
      {
         "name":"appdata",
         "buildsystem":"simple",
         "build-commands":[
            "mkdir -p ${FLATPAK_DEST}/share/appdata",
            "cp org.gtk.Gtk3theme.Obsidian-2-Red.metainfo.xml ${FLATPAK_DEST}/share/appdata",
            "appstream-compose --basename=org.gtk.Gtk3theme.Obsidian-2-Red --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.Obsidian-2-Red"
         ],
         "sources":[
            {
               "type":"file",
               "path":"org.gtk.Gtk3theme.Obsidian-2-Red.metainfo.xml"
            }
         ]
      }
   ]
}
